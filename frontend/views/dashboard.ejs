    </div>
  </nav>

  <!-- Main Content -->
  <div class="container-fluid main-section">
    <div class="row">
      <!-- Left Sidebar -->
      <aside class="sidebar col-lg-3 p-3 border-end">
        <!-- Sidebar User Profile Section -->
        <div class="sidebar-profile">
            <div class="profile-image">
                <img id="sidebarUserAvatar" src="/assets/images/default-avatar.png" alt="User Avatar" class="rounded-circle">
            </div>
            <div class="profile-info">
                <h4 id="userName">Loading...</h4>
                <p id="userHandle" class="text-muted">@user</p>
            </div>
        </div>
        <nav class="nav flex-column gap-2">
          <a class="nav-link d-flex align-items-center gap-3 py-2 rounded-3" href="#">
            <i class="bi bi-person fs-5"></i>
            My Profile
          </a>
          <a class="nav-link d-flex align-items-center gap-3 py-2 rounded-3" href="#">
            <i class="bi bi-trophy fs-5"></i>
            Achievements
          </a>
          <a class="nav-link d-flex align-items-center gap-3 py-2 rounded-3" href="#">
            <i class="bi bi-bookmark fs-5"></i>
            Saved Posts
          </a>
          <a href="/edit-profile" class="btn btn-success mt-3 rounded-pill fw-bold">
            <i class="bi bi-pencil-square me-2"></i>Edit Profile
          </a>
          <a href="#" onclick="logout(); return false;" class="btn btn-outline-danger mt-2 rounded-pill fw-bold">
            <i class="bi bi-box-arrow-right me-2"></i>Logout
          </a>
        </nav>
      </aside>

      <!-- Main Feed -->
      <div class="col-lg-6 col-md-7">
        <div class="post-creation-card">
          <div class="post-creation-header">
            <div class="post-user-info">
                <img id="postUserAvatar" src="/assets/images/default-avatar.png" alt="User Avatar" class="rounded-circle">
                <div class="user-details">
                    <h5 id="postUserName">Loading...</h5>
                    <p id="postUserHandle" class="text-muted">@user</p>
                </div>
            </div>
          </div>
          <div class="post-creation-body">
            <form id="createPostForm">
              <textarea class="post-creation-textarea w-100" id="postContent" rows="3" placeholder="What's on your mind?"></textarea>
              <div class="post-creation-footer">
                <div class="post-creation-actions">
                  <button type="button" class="post-creation-action-btn" id="emojiPickerBtn">
                    <i class="bi bi-emoji-smile fs-5"></i>
                  </button>
                  <label for="imageUpload" class="post-creation-action-btn mb-0">
                    <i class="bi bi-image fs-5"></i>
                  </label>
                  <input type="file" id="imageUpload" class="d-none" accept="image/*">
                  <label for="videoUpload" class="post-creation-action-btn mb-0">
                    <i class="bi bi-camera-video fs-5"></i>
                  </label>
                  <input type="file" id="videoUpload" class="d-none" accept="video/*">
                </div>
                <button type="submit" class="post-creation-submit-btn">Post</button>
              </div>
            </form>
          </div>
        </div>

        <!-- Posts Container -->
        <div id="postsContainer">
          <!-- Posts will be loaded here dynamically by dashboard.js -->
        </div>
      </div>

      <!-- Right Sidebar -->
      <aside class="sidebar col-lg-3 p-3 border-start">
        <!-- Events Section -->
