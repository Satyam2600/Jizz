<script>
  document.querySelector("form").addEventListener("submit", async (e) => {
    e.preventDefault();

    const fullName = document.querySelector('input[placeholder="Full Name"]').value.trim();
    const username = document.querySelector('input[placeholder="Username"]').value.trim();
    const department = document.querySelector(".custom-select").value;
    const bio = document.querySelector("textarea").value.trim();
    const phoneNumber = document.querySelector('input[type="tel"]').value.trim();
    const github = document.querySelector('input[placeholder="Github.com/yourhandle"]').value.trim();
    const linkedin = document.querySelector('input[placeholder="linkedin.com/yourhandle"]').value.trim();
    const twitter = document.querySelector('input[placeholder="twitter.com/yourhandle"]').value.trim();
    const instagram = document.querySelector('input[placeholder="Instagram.com/yourhandle"]').value.trim();

    const userProfile = {
      userId: "USER_ID_HERE", // Replace with the actual user ID
      fullName,
      username,
      department,
      bio,
      phoneNumber,
      github,
      linkedin,
      twitter,
      instagram,
    };

    try {
      const response = await fetch("http://localhost:5000/api/users/update-profile", {
        method: "POST",
        headers: { "Content-Type": "application/json" },
        body: JSON.stringify(userProfile),
      });

      if (response.ok) {
        alert("Profile updated successfully!");
        window.location.href = "dashboard.html";
      } else {
        alert("Failed to update profile. Please try again.");
      }
    } catch (error) {
      console.error("Error updating profile:", error);
      alert("An error occurred. Please try again.");
    }
  });
  document.getElementById("uploadProfilePhotoBtn").addEventListener("click", () => {
