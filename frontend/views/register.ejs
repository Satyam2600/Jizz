<!DOCTYPE html>
<html>
  <head>
    <link rel="preconnect" href="https://fonts.gstatic.com/" crossorigin="">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css2?family=Noto+Sans:wght@400;500;700;900&family=Plus+Jakarta+Sans:wght@400;500;700;800&display=swap">
    <title>JIZZ - Sign Up</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
    <style>
      body {
        font-family: 'Plus Jakarta Sans', 'Noto Sans', sans-serif;
        min-height: 100vh;
        background: linear-gradient(120deg, #1a1a1a 0%, #019863 100%), url('https://images.unsplash.com/photo-1506744038136-46273834b3fb?auto=format&fit=crop&w=1500&q=80') center/cover no-repeat;
        background-blend-mode: overlay;
        position: relative;
        overflow-x: hidden;
      }
      .rect-card {
        background: rgba(30, 30, 30, 0.88);
        border-radius: 1.2rem;
        box-shadow: 0 8px 32px 0 rgba(1, 152, 99, 0.18);
        backdrop-filter: blur(8px);
        -webkit-backdrop-filter: blur(8px);
        border: 1.5px solid rgba(255,255,255,0.10);
        max-width: 500px;
        margin: 48px auto;
        padding: 2.5rem 2.5rem 2rem 2.5rem;
      }
      @media (max-width: 600px) {
        .rect-card { padding: 1.5rem 0.7rem; }
      }
      .rect-card .brand {
        font-size: 2.2rem;
        font-weight: 800;
        color: #fff;
        letter-spacing: 2px;
        text-shadow: 0 2px 12px #01986344;
        margin-bottom: 0.5rem;
      }
      .rect-card .subtitle {
        color: #adb5bd;
        font-size: 1.1rem;
        margin-bottom: 1.5rem;
      }
      .rect-card .form-label {
        color: #fff;
        font-weight: 600;
        margin-bottom: 0.4rem;
      }
      .rect-card .form-control {
        background: rgba(255,255,255,0.08);
        border: 1.5px solid #01986344;
        color: #fff;
        border-radius: 0.7rem;
        padding: 1rem;
        font-size: 1.08rem;
        transition: border-color 0.2s, box-shadow 0.2s;
      }
      .rect-card .form-control:focus {
        border-color: #019863;
        box-shadow: 0 0 0 2px #01986333;
        background: rgba(255,255,255,0.13);
        color: #fff;
      }
      .rect-card .input-group-text, .rect-card .password-toggle {
        background: transparent;
        border: none;
        color: #adb5bd;
        font-size: 1.2em;
        cursor: pointer;
      }
      .rect-card .btn-success {
        background: linear-gradient(90deg, #019863 60%, #018555 100%);
        border: none;
        border-radius: 0.7rem;
        font-weight: 700;
        font-size: 1.1rem;
        padding: 0.9rem 0;
        box-shadow: 0 4px 16px #01986333;
        letter-spacing: 1px;
        transition: background 0.2s, transform 0.2s;
      }
      .rect-card .btn-success:hover {
        background: linear-gradient(90deg, #018555 0%, #019863 100%);
        transform: translateY(-2px) scale(1.03);
      }
      .rect-card .register-link {
        color: #adb5bd;
        margin-top: 1.5rem;
      }
      .rect-card .register-link a {
        color: #fff;
        text-decoration: underline;
        font-weight: 600;
      }
      .rect-card .register-link a:hover {
        color: #019863;
      }
    </style>
  </head>
  <body>
    <!-- Navbar (same as login page) -->
    <nav class="navbar navbar-expand-lg fixed-top border-bottom">
      <div class="container-fluid px-4">
        <a class="navbar-brand fw-bold" href="/">Jizz</a>
        <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarNav">
          <ul class="navbar-nav me-auto">
            <li class="nav-item">
              <a class="nav-link" href="/login"><i class="bi bi-box-arrow-in-right me-2"></i>Login</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/register"><i class="bi bi-person-plus me-2"></i>Register</a>
            </li>
          </ul>
          <div class="d-flex align-items-center gap-3">
            <div class="theme-toggle" id="themeToggle" style="cursor: pointer">
              <i class="bi bi-moon"></i>
            </div>
          </div>
        </div>
      </div>
    </nav>
    <div class="container-fluid min-vh-100 d-flex flex-column justify-content-center align-items-center" style="background: none;">
      <div class="rect-card">
        <div class="brand text-center mb-2">JIZZ</div>
        <div class="subtitle text-center mb-4">Create your account and join the campus network</div>
        <form id="registerForm" class="mb-2">
          <div class="mb-3">
            <label class="form-label">Full Name</label>
            <input type="text" id="fullName" name="fullName" class="form-control" placeholder="Enter your full name" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Roll Number</label>
            <input type="text" id="rollNumber" name="rollNumber" class="form-control" placeholder="Enter your roll number" required />
          </div>
          <div class="mb-3">
            <label class="form-label">Email</label>
            <input type="email" id="email" name="email" class="form-control" placeholder="Enter your email" autocomplete="username" required />
          </div>
          <div class="mb-4">
            <label class="form-label">Password</label>
            <div class="input-group">
              <input type="password" id="password" name="password" class="form-control" placeholder="Create a secure password" autocomplete="new-password" required />
              <button type="button" class="input-group-text password-toggle" tabindex="-1" onclick="const p=document.getElementById('password');p.type=p.type==='password'?'text':'password';this.innerHTML=p.type==='password'?'<i class=\'bi bi-eye\'></i>':'<i class=\'bi bi-eye-slash\'></i>';"><i class="bi bi-eye"></i></button>
            </div>
          </div>
          <button type="submit" class="btn btn-success w-100">Register</button>
        </form>
        <div class="register-link text-center">
          Already have an account? <a href="/login">Log in</a>
        </div>
      </div>
    </div>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script src="/assets/js/register.js"></script>
    <script>
      document.addEventListener("DOMContentLoaded", function () {
        const themeToggle = document.getElementById("themeToggle");
        const body = document.body;
        // Load saved theme from localStorage
        const savedTheme = localStorage.getItem("theme");
        if (savedTheme) {
          body.setAttribute("data-bs-theme", savedTheme);
          themeToggle.innerHTML =
            savedTheme === "dark"
              ? '<i class="bi bi-sun"></i>'
              : '<i class="bi bi-moon"></i>';
        }
        // Toggle theme on click
        themeToggle.addEventListener("click", function () {
          const isDark = body.getAttribute("data-bs-theme") === "dark";
          const newTheme = isDark ? "light" : "dark";
          body.setAttribute("data-bs-theme", newTheme);
          localStorage.setItem("theme", newTheme);
          this.innerHTML = isDark
            ? '<i class="bi bi-moon"></i>'
            : '<i class="bi bi-sun"></i>';
        });
      });
    </script>
  </body>
</html>