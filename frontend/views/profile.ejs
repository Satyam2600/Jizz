<!DOCTYPE html>
<html lang="en">
<head>
  <meta charset="UTF-8">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
  <title><%= user.fullName %> | Profile</title>
  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
  <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;500;700;800&family=Noto+Sans:wght@400;500;700;900&display=swap" rel="stylesheet">
  <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons/font/bootstrap-icons.css">
  <style>
    body { font-family: 'Plus Jakarta Sans', 'Noto Sans', sans-serif; background-color: #fff; }
    .profile-header { border-bottom: 1px solid #F4EFE6; padding: 24px 0; background: #fff; }
    .profile-avatar { width: 128px; height: 128px; border-radius: 50%; object-fit: cover; border: 3px solid #E9DFCE; background: #F4EFE6; }
    .profile-cover { width: 100%; height: 220px; object-fit: cover; border-radius: 12px; margin-bottom: -64px; background: #F4EFE6; }
    .profile-card { border: 1px solid #E9DFCE; border-radius: 16px; background: #fff; margin-bottom: 24px; }
    .badge-skill, .badge-interest { background: #F4EFE6; color: #1C160C; border-radius: 2rem; padding: 0.5em 1em; margin-right: 0.5em; margin-bottom: 0.5em; font-size: 0.95em; font-weight: 500; display: inline-block; }
    .profile-stats .stat { min-width: 110px; text-align: center; border: 1px solid #E9DFCE; border-radius: 12px; padding: 1em 0.5em; background: #fff; }
    .profile-stats .stat-title { color: #A18249; font-size: 0.95em; }
    .profile-stats .stat-value { color: #1C160C; font-size: 1.5em; font-weight: bold; }
    .profile-section-title { color: #1C160C; font-weight: bold; margin-top: 2em; margin-bottom: 0.5em; font-size: 1.15em; }
    .profile-link { color: #1C160C; text-decoration: none; word-break: break-all; }
    .profile-link:hover { text-decoration: underline; }
  </style>
</head>
<body>
  <nav class="navbar navbar-expand-lg border-bottom mb-4" style="background: #fff;">
    <div class="container">
      <a class="navbar-brand fw-bold" href="#">JIZZ</a>
      <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
        <span class="navbar-toggler-icon"></span>
      </button>
      <div class="collapse navbar-collapse" id="navbarNav">
        <ul class="navbar-nav me-auto">
          <li class="nav-item"><a class="nav-link" href="/dashboard"><i class="bi bi-house-door me-2"></i>Home</a></li>
          <li class="nav-item"><a class="nav-link" href="/communities"><i class="bi bi-people me-2"></i>Communities</a></li>
          <li class="nav-item"><a class="nav-link" href="/events"><i class="bi bi-calendar-event me-2"></i>Events</a></li>
        </ul>
        <div class="d-flex align-items-center">
          <img src="<%= user.avatar || '/assets/images/default-avatar.png' %>" alt="Avatar" class="rounded-circle" style="width:40px;height:40px;object-fit:cover;">
        </div>
      </div>
    </div>
  </nav>
  <div class="container">
    <div class="position-relative mb-5">
      <img src="<%= user.banner || '/assets/images/default-banner.jpg' %>" alt="Cover Photo" class="profile-cover">
      <div class="position-absolute top-100 start-0 translate-middle-y" style="left: 32px;">
        <img src="<%= user.avatar || '/assets/images/default-avatar.png' %>" alt="Avatar" class="profile-avatar shadow">
      </div>
    </div>
  </div>
  <div class="container">
    <div class="profile-card p-4">
      <div class="row align-items-center">
        <div class="col-md-8">
          <h2 class="mb-0"><%= user.fullName %></h2>
          <p class="text-secondary mb-2">@<%= user.username %></p>
          <p class="mb-2"><%= user.bio %></p>
        </div>
        <div class="col-md-4 text-md-end mt-3 mt-md-0">
          <% if (!user.isCurrentUser) { %>
            <% if (user.isFollowing) { %>
              <button class="btn btn-success rounded-pill px-4">Following</button>
            <% } else { %>
              <button class="btn btn-outline-primary rounded-pill px-4">Follow</button>
            <% } %>
          <% } %>
        </div>
      </div>
      <div class="d-flex gap-3 mt-4 profile-stats flex-wrap">
        <div class="stat">
          <div class="stat-value"><%= user.postsCount %></div>
          <div class="stat-title">Posts</div>
        </div>
        <div class="stat">
          <div class="stat-value"><%= user.followersCount %></div>
          <div class="stat-title">Followers</div>
        </div>
        <div class="stat">
          <div class="stat-value"><%= user.followingCount %></div>
          <div class="stat-title">Following</div>
        </div>
      </div>
    </div>
    <div class="profile-card p-4">
      <div class="row">
        <div class="col-md-6">
          <div class="profile-section-title">Department</div>
          <div><%= user.department || '-' %></div>
          <div class="profile-section-title">Year of Study</div>
          <div><%= user.year || '-' %></div>
          <div class="profile-section-title">Semester</div>
          <div><%= user.semester || '-' %></div>
        </div>
        <div class="col-md-6">
          <div class="profile-section-title">Skills</div>
          <div>
            <% 
              let skillsArr = Array.isArray(user.skills) 
                ? user.skills 
                : (user.skills ? user.skills.split(',') : []);
              skillsArr.forEach(skill => { 
                if(skill && skill.trim()) { 
            %>
              <span class="badge-skill"><%= skill.trim() %></span>
            <% }}); %>
          </div>
          <div class="profile-section-title">Interests</div>
          <div>
            <% 
              let interestsArr = Array.isArray(user.interests) 
                ? user.interests 
                : (user.interests ? user.interests.split(',') : []);
              interestsArr.forEach(interest => { 
                if(interest && interest.trim()) { 
            %>
              <span class="badge-interest"><%= interest.trim() %></span>
            <% }}); %>
          </div>
        </div>
      </div>
      <div class="row mt-4">
        <div class="col-md-6">
          <div class="profile-section-title">Portfolio/Projects</div>
          <% if (user.portfolio) { %>
            <a href="<%= user.portfolio %>" class="profile-link" target="_blank"><%= user.portfolio %></a>
          <% } else { %>
            <span class="text-muted">-</span>
          <% } %>
        </div>
        <div class="col-md-6">
          <div class="profile-section-title">LinkedIn</div>
          <% if (user.linkedin) { %>
            <a href="<%= user.linkedin %>" class="profile-link" target="_blank"><%= user.linkedin %></a>
          <% } else { %>
            <span class="text-muted">-</span>
          <% } %>
        </div>
      </div>
    </div>
    <div class="profile-card p-4">
      <div class="profile-section-title mb-3">Posts</div>
      <% if (posts && posts.length > 0) { %>
        <% posts.forEach(post => { %>
          <div class="d-flex align-items-center mb-3">
            <% if (post.image) { %>
              <img src="/uploads/<%= post.image %>" alt="Post Image" class="rounded" style="width:56px;height:56px;object-fit:cover;margin-right:16px;">
            <% } %>
            <div class="flex-grow-1">
              <div class="fw-bold"><%= post.content ? post.content.substring(0, 60) : 'Media Post' %></div>
              <div class="text-muted small"><%= post.createdAt.toLocaleDateString ? post.createdAt.toLocaleDateString() : post.createdAt %></div>
            </div>
            <div class="ms-3 text-secondary"><i class="bi bi-heart-fill"></i> <%= post.likes %></div>
          </div>
        <% }); %>
      <% } else { %>
        <div class="text-muted">No posts yet.</div>
      <% } %>
    </div>
  </div>
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
</body>
</html>
