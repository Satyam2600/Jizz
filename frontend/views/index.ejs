      width: 8px;
      background: #23272f;
    }
    ::-webkit-scrollbar-thumb {
      background: #181c1f;
      border-radius: 4px;
    }

    body[data-aos-duration="400"] [data-aos] {
      transition-duration: 0.8s;
    }
    #contact [data-aos="fade-left"],
    #contact [data-aos="fade-right"] {
      transition-duration: 0.35s !important;
    }
    #features [data-aos="fade-up"] {
      transition-duration: 0.35s !important;
    }

    /* Hero Section Improvements */
    #home {
      position: relative;
      z-index: 1;
    }
    #home .container {
      background: none !important;
      box-shadow: none !important;
    }
    #home-hero-bg {
      position: absolute;
      inset: 0;
      width: 100%;
      height: 100%;
      z-index: 0;
      background-image: linear-gradient(rgba(0,0,0,0.45), rgba(0,0,0,0.45)), url('/assets/images/hero-bg.jpg');
      background-size: cover;
      background-position: center;
      background-repeat: no-repeat;
      opacity: 1;
      transition: opacity 0.4s;
    }
    body.dark-mode #home-hero-bg {
      background-image: linear-gradient(rgba(0,0,0,0.7), rgba(0,0,0,0.7)), url('/assets/images/hero-bg.jpg');
    }
    #home .hero-content {
      position: relative;
      z-index: 1;
    }
    #home h1.display-3 {
      color: #fff !important;
      text-shadow: 0 2px 16px rgba(0,0,0,0.25);
    }
    body.dark-mode #home h1.display-3 {
      color: #fff !important;
      text-shadow: 0 2px 24px rgba(0,0,0,0.5);
    }
    #home p.lead {
      color: #f8f8f8 !important;
      text-shadow: 0 1px 8px rgba(0,0,0,0.18);
    }
    body.dark-mode #home p.lead {
      color: #e0e0e0 !important;
    }

    /* Improve Contact Section for Dark Mode */
    body.dark-mode #contact {
      background: #181c1f !important;
    }
    body.dark-mode #contact h2.display-5 {
      color: #fff !important;
      text-shadow: 0 2px 16px rgba(0,0,0,0.25);
    }
