    /* Modern hover effect for all links and buttons in navbar, footer, and page */
    .navbar .nav-link,
    .navbar .btn,
    .navbar .btn.position-relative,
    .navbar .navbar-brand,
    .navbar .dropdown > a,
    footer a,
    .footer-modern a,
    .footer-modern .btn,
    .btn,
    a.btn {
      transition: all 0.3s cubic-bezier(.4,0,.2,1);
    }
    .navbar .nav-link:hover,
    .navbar .btn:hover,
    .navbar .btn.position-relative:hover,
    .navbar .navbar-brand:hover,
    .navbar .dropdown > a:hover,
    footer a:hover,
    .footer-modern a:hover,
    .footer-modern .btn:hover,
    .btn:hover,
    a.btn:hover {
      transform: scale(1.08);
      box-shadow: 0 4px 16px 0 rgba(1,152,99,0.18);
      z-index: 2;
      color: var(--primary-green) !important;
      text-decoration: none;
    }

