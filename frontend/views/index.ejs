  <style>
    :root {
      --primary-green: #019863;
      --light-beige: #F4EFE6;
      --dark-text: #1C160C;
      --accent-gold: #A18249;
      --navbar-bg: #fff;
      --navbar-text: #1C160C;
        --body-bg: #fff;
      --card-bg: #fff;
      --input-bg: #fff;
      --input-border: #ced4da;
      --footer-bg: #181c1f;
      --footer-text: #fff;
      --shadow: 5px 5px 10px rgba(0,0,0,0.1);
    }

    body.dark-mode {
      --primary-green: #1de9b6;
      --light-beige: #23272f;
      --dark-text: #f4f4f4;
      --accent-gold: #ffe082;
      --navbar-bg: rgba(24,28,31,0.95);
      --navbar-text: #f4f4f4;
      --body-bg: linear-gradient(135deg, #181c1f 0%, #23272f 100%);
      --card-bg: #23272f;
      --input-bg: #23272f;
      --input-border: #333a44;
      --footer-bg: #181c1f;
      --footer-text: #f4f4f4;
      --shadow: 0 4px 32px 0 rgba(0,0,0,0.45);
    }

    body {
      background: var(--body-bg);
      color: var(--dark-text);
      font-family: 'Plus Jakarta Sans', 'Noto Sans', sans-serif;
      transition: background 0.4s, color 0.4s;
    }

    .navbar, .navbar.bg-white, .navbar.fixed-top {
      background: var(--navbar-bg) !important;
      color: var(--navbar-text) !important;
      transition: background 0.4s, color 0.4s;
    }

    .navbar .nav-link, .navbar .navbar-brand, .navbar .btn {
      color: var(--navbar-text) !important;
      transition: color 0.4s;
    }

    .navbar .nav-link.active, .navbar .nav-link:focus, .navbar .nav-link:hover {
      color: var(--primary-green) !important;
    }

    .card, .feature-card, .bg-white, .rounded-4, .rounded-3 {
      background: var(--card-bg) !important;
      color: var(--dark-text) !important;
      box-shadow: var(--shadow);
      transition: background 0.4s, color 0.4s, box-shadow 0.4s;
    }

    .feature-card img {
      height: 229px;
      object-fit: cover;
      background: #222;
    }

    .feature-card:hover {
      transform: translateY(-5px);
    }

    .button-2, .btn-success, .btn-outline-success {
      transition: background 0.4s, color 0.4s, border-color 0.4s;
    }

    .button-2 {
      background-color: rgb(246, 234, 213);
      border: none;
      color: black;
      font-weight: 500;
    }
    .button-2:hover {
      background-color: rgb(255, 234, 198);
      color: black;
    }

    body.dark-mode .button-2 {
      background: var(--primary-green) !important;
      color: #181c1f !important;
    }
    body.dark-mode .button-2:hover {
      background: var(--accent-gold) !important;
      color: #181c1f !important;
    }

    body.dark-mode .btn-success {
      background: var(--primary-green) !important;
      color: #181c1f !important;
      border: none;
    }
    body.dark-mode .btn-outline-success {
      color: var(--primary-green) !important;
      border-color: var(--primary-green) !important;
    }
    body.dark-mode .btn-outline-success:hover {
      background: var(--primary-green) !important;
      color: #181c1f !important;
    }

    .smexy p {
      color: rgb(190, 171, 139) !important;
    }
    .sattucolor {
      color: rgb(224, 210, 188);
    }

    #contactForm input,
    #contactForm textarea {
      border: 2px solid var(--input-border);
      background: var(--input-bg);
      color: var(--dark-text);
      transition: border-color 0.3s, box-shadow 0.3s, background 0.4s, color 0.4s;
    }
    #contactForm input:focus,
    #contactForm textarea:focus {
      border-color: var(--primary-green);
      box-shadow: 0 0 5px rgba(1, 152, 99, 0.5);
      outline: none;
    }
    #contactForm textarea {
      resize: none;
    }

    .form-control {
      background: var(--input-bg) !important;
      color: var(--dark-text) !important;
      border-color: var(--input-border) !important;
    }
    .form-control:focus {
      border-color: var(--primary-green) !important;
      box-shadow: 0 0 5px rgba(1, 152, 99, 0.5);
    }
    input::placeholder, textarea::placeholder {
      color: #aaa !important;
    }

    footer, .bg-dark {
      background: var(--footer-bg) !important;
      color: var(--footer-text) !important;
      transition: background 0.4s, color 0.4s;
    }
    footer a, footer h5, footer h6, footer p, footer ul li a {
      color: var(--footer-text) !important;
    }

    .social-links a {
      color: var(--primary-green) !important;
      transition: color 0.3s;
    }
    body.dark-mode .social-links a:hover {
      color: var(--accent-gold) !important;
    }

    ::-webkit-scrollbar {
      width: 8px;
      background: #23272f;
    }
    ::-webkit-scrollbar-thumb {
      background: #181c1f;
      border-radius: 4px;
    }

