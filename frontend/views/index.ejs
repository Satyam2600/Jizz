    body.dark-mode #about {
      background: #181c1f !important;
    }
    body.dark-mode #about .bg-white {
      background: #23272f !important;
      color: #f4f4f4 !important;
      box-shadow: 0 4px 32px 0 rgba(0,0,0,0.45);
